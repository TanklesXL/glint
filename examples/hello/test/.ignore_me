pub fn hello_single_command_test() {
  hello.hello_single_cmd()
  |> glint.test_init
  |> glint.test_flag(hello.repeat_flag(), 2)
  |> glint.test_flag(hello.caps_flag(), True)
  |> glint.test_named_arg("name", "Test")
  |> glint.test_run()
  |> should.equal("HELLO, TEST!\nHELLO, TEST!")
}

pub fn hello_command_test() {
  hello.hello_cmd()
  |> glint.test_init
  |> glint.test_flag(hello.repeat_flag(), 1)
  |> glint.test_flag(hello.caps_flag(), False)
  |> glint.test_unnamed_args(["Joe", "Gleamlins"])
  |> glint.test_run()
  |> should.equal("Hello, Joe and Gleamlins!")
}
